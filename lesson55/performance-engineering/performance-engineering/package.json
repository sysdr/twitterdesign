    "@types/react-dom": "^18.2.17",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.9",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
